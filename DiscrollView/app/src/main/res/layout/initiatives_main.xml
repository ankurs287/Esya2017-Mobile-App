<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:id="@+id/mainFrameInitiatives">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#99000000"
            android:weightSum="10"
            android:layout_weight="6">


            <com.example.discrollview.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="3"
                android:padding="8dp"
                android:text="As part of social initiatives, Esya'17 will be an active promoter of Himmat App which was launched by the Home Minister on 1st January 2015. As a part of social initiatives, the collaboration between Esya'17 and the Delhi Police is intended to raise awareness about women safety. This app is a woman safety mobile application of Delhi Police." />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingBottom="30dp">


                <com.example.discrollview.MyTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="COMING SOON"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/backButtonInitiatives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:text="Back" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>