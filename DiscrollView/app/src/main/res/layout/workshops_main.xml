<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:id="@+id/mainFrameWorkshops">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#99000000"
            android:weightSum="10"
            android:layout_weight="6">


            <com.example.discrollview.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_weight="3"
                android:padding="8dp"
                android:text="Esya'17 will leave no stone unturned to spread awareness about its theme 'Digital India' and to help transform India into a digitally empowered society.
Accordingly, we will conduct workshops where students will be taught the basics of programming and circuit design. We will be conducting two tech events mainly for the school children, namely procon junior and circuitrix junior, to encourage young talent." />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingBottom="30dp">


                <com.example.discrollview.MyTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="COMING SOON"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/backButtonWorkshops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp"
                    android:text="Back" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>