            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--<RelativeLayout-->
                <!--android:id="@+id/slideFrame"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:orientation="vertical">-->

                <!--<com.daimajia.slider.library.SliderLayout-->
                    <!--android:id="@+id/slider"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="220dp"-->
                    <!--android:adjustViewBounds="true"-->
                    <!--android:background="#000000"-->
                    <!--android:scaleType="fitXY"-->
                    <!--custom:auto_cycle="true" />-->

            <!--</RelativeLayout>-->

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewTop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/slideFrame"
                android:layout_gravity="center"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_marginTop="-3dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@android:color/background_light"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="5dp"
                card_view:contentPaddingTop="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:src="@drawable/counterback"-->
                        <!--android:alpha="0.6"-->
                        <!--/>-->
                    <RelativeLayout
                        android:id="@+id/slideFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:orientation="vertical"
                        android:alpha="0.6">

                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="#000000"
                            android:scaleType="fitXY"
                            custom:auto_cycle="true" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <com.example.discrollview.MyTextViewHeading
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Esya'16:"
                            android:textColor="#FFFFFF"
                            android:textSize="48sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="-8dp">


                            <com.daasuu.cat.CountAnimationTextView
                                android:id="@+id/count_animation_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:gravity="right"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" Schools and Colleges"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="-8dp">

                            <com.daasuu.cat.CountAnimationTextView
                                android:id="@+id/count_animation_textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:gravity="right"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" Footfall"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="-8dp">

                            <com.daasuu.cat.CountAnimationTextView
                                android:id="@+id/count_animation_textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|end"
                                android:gravity="right"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="48sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" Events"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp" />


                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewFoldableLayouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPaddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    folding-cell:backSideColor="#FFFFFF">

                    <FrameLayout
                        android:id="@+id/cell_content_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/unfoldedEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="800px"
                            android:src="@drawable/maindj" />

                        <Button
                            android:id="@+id/events"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="24dp"
                            android:text="MORE INFORMATION" />

                    </FrameLayout>
                    ​

                    <FrameLayout
                        android:id="@+id/cell_title_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">>

                        <ImageView
                            android:id="@+id/iconEvents"
                            android:layout_width="match_parent"
                            android:layout_height="480px"
                            android:background="@drawable/iconevents" />
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>


                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    folding-cell:backSideColor="#FFFFFF">

                    <FrameLayout
                        android:id="@+id/cell_content_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">>

                        <ImageView
                            android:id="@+id/unfoldedDJ"
                            android:layout_width="wrap_content"
                            android:layout_height="800px"
                            android:background="@drawable/maindj" />

                        <Button
                            android:id="@+id/djNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="24dp"
                            android:text="MORE INFORMATION" />
                    </FrameLayout>
                    ​

                    <FrameLayout
                        android:id="@+id/cell_title_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">>

                        <ImageView
                            android:id="@+id/iconDJ"
                            android:layout_width="match_parent"
                            android:layout_height="480px"
                            android:background="@drawable/icondj" />
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>


                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    folding-cell:backSideColor="#FFFFFF">

                    <FrameLayout
                        android:id="@+id/cell_content_view3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">>

                        <ImageView
                            android:id="@+id/unfoldedComedy"
                            android:layout_width="wrap_content"
                            android:layout_height="800px"
                            android:src="@drawable/maindj" />

                        <Button
                            android:id="@+id/comedyNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="24dp"
                            android:text="MORE INFORMATION" />

                    </FrameLayout>
                    ​

                    <FrameLayout
                        android:id="@+id/cell_title_view3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">>

                        <ImageView
                            android:id="@+id/iconComedy"
                            android:layout_width="match_parent"
                            android:layout_height="480px"
                            android:background="@drawable/iconcomedy" />

                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>


                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    folding-cell:backSideColor="#FFFFFF">

                    <FrameLayout
                        android:id="@+id/cell_content_view4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">>

                        <ImageView
                            android:id="@+id/unfoldedInitiatives"
                            android:layout_width="wrap_content"
                            android:layout_height="800px"
                            android:src="@drawable/maindj" />

                        <Button
                            android:id="@+id/initiatives"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="24dp"
                            android:text="MORE INFORMATION" />

                    </FrameLayout>
                    ​

                    <FrameLayout
                        android:id="@+id/cell_title_view4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp">>

                        <ImageView
                            android:id="@+id/iconInitiatives"
                            android:layout_width="match_parent"
                            android:layout_height="480px"
                            android:background="@drawable/iconinitiatives" />
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>


                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    folding-cell:backSideColor="#FFFFFF">

                    <FrameLayout
                        android:id="@+id/cell_content_view5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:visibility="gone">>

                        <ImageView
                            android:id="@+id/unfoldedWorkshops"
                            android:layout_width="wrap_content"
                            android:layout_height="800px"
                            android:src="@drawable/maindj" />

                        <Button
                            android:id="@+id/workshops"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
