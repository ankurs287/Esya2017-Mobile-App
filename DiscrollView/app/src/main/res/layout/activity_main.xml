<com.flavienlaurent.discrollview.lib.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flavienlaurent.discrollview.lib.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- here you put discrollvable views -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="800dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:id="@+id/starterImage"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/esyalogo" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="DIRECTIONS"
            android:textStyle="bold"
            android:paddingBottom="20dp"
            discrollve:discrollve_alpha="false"
            discrollve:discrollve_translation="fromRight"
            android:textSize="20dp"/>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                tools:context="com.example.discrollview.ClinicFragment" />

        </FrameLayout>

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"-->
        <!--android:background="#000000"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT US"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iconCat1"
            android:src="@drawable/ic_android"
            android:layout_gravity="center"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft"
            discrollve:discrollve_threshold="0.3"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iconCat2"
            android:src="@drawable/ic_android"
            android:layout_gravity="center"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"
            discrollve:discrollve_threshold="0.3"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iconCat3"
            android:src="@drawable/ic_android"
            android:layout_gravity="center"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft"
            discrollve:discrollve_threshold="0.3"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iconCat4"
            android:src="@drawable/ic_android"
            android:layout_gravity="center"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"
            discrollve:discrollve_threshold="0.3"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iconCat5"
            android:src="@drawable/ic_android"
            android:layout_gravity="center"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textSize="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="EXPLORING INFINITY AND BEYOND"
                android:textAlignment="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Esya is a two-day long festival that aims to stimulate new innovations and carve out hidden talents.This year, Esya promises to be an unprecedented celebration of budding talent, technical excellence and innovative minds, breaking all barriers and exploring the unexplored.."
                android:textAlignment="center"
                />

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="25dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@drawable/facebook_icon"
                    android:id="@+id/facebookEsya"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:src="@drawable/instagram_icon"
                    android:layout_weight="1"
                    android:id="@+id/instagramEsya"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:src="@drawable/twitter_icon"
                    android:layout_weight="1"
                    android:id="@+id/twitterEsya"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:weightSum="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="25dp"
                    android:text="To get to know more please visit our website"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/websiteEsya"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"
                    android:padding="20dp"/>

            </LinearLayout>

        </LinearLayout>



    </com.flavienlaurent.discrollview.lib.DiscrollViewContent>

</com.flavienlaurent.discrollview.lib.DiscrollView>

