        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="DIRECTIONS"
            android:textStyle="bold"
            android:paddingBottom="20dp"
            discrollve:discrollve_alpha="true"
            android:textSize="20dp"/>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">


            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/mapV"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                tools:context="com.example.discrollview.ClinicFragment" />

        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            discrollve:discrollve_alpha="true"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textSize="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="EXPLORING INFINITY AND BEYOND"
                android:textAlignment="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Esya is a two-day long festival that aims to stimulate new innovations and carve out hidden talents.This year, Esya promises to be an unprecedented celebration of budding talent, technical excellence and innovative minds, breaking all barriers and exploring the unexplored.."
                android:textAlignment="center"
                />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:textStyle="bold"
            discrollve:discrollve_alpha="true"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT"
            android:textStyle="bold"
            discrollve:discrollve_alpha="true"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingTop="25dp"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@drawable/facebook_icon"
                    android:id="@+id/facebookEsya"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:src="@drawable/instagram_icon"
                    android:layout_weight="1"
                    android:id="@+id/instagramEsya"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:src="@drawable/twitter_icon"
                    android:layout_weight="1"
                    android:id="@+id/twitterEsya"/>


                <ImageButton
                    android:id="@+id/emailEsya"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_email" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To get to know more please visit our website"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>





