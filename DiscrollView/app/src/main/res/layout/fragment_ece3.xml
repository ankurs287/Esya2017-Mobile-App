            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="1dp"
            card_view:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/robowarsMainCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
